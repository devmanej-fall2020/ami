{
    "variables": {
        "aws_access_key": "",
        "aws_secret_key": "",
        "aws_region": "",
        "source_ami": "ami-0817d428a6fb68645",
        "ssh_username": "ubuntu",
        "prod_account_id": "",
        "vpc_id": "",
        "subnet_id": ""
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "access_key": "{{user `aws_access_key`}}",
            "secret_key": "{{user `aws_secret_key`}}",
            "region": "{{user `aws_region`}}",
            "instance_type": "t2.micro",
            "source_ami": "{{user `source_ami`}}",
            "ssh_username": "{{user `ssh_username`}}",
            "vpc_id": "{{user `vpc_id`}}",
            "subnet_id": "{{user `subnet_id`}}",
            "ami_name": "csye6225_{{timestamp}}",
            "ami_users": ["{{user `prod_account_id`}}"],
            "ami_description": "Ubuntu AMI for CSYE 6225 - Fall 2020",
            "launch_block_device_mappings": [
                {
                    "device_name": "/dev/sda1",
                    "volume_size": 8,
                    "volume_type": "gp2",
                    "delete_on_termination": true
                }
            ]
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "environment_vars": [
                "FOO=foo"
            ],
            "inline": [
                "sudo apt-get update",
                "curl -sL https://deb.nodesource.com/setup_10.x | sudo -E bash -",
                "sudo apt-get install -y nodejs",
                "sudo apt-get install -y build-essential",
                "sudo apt-get install zip unzip",
                "sudo apt-get install ruby -y",
                "sudo apt-get install wget",
                "cd ~",
                "wget https://aws-codedeploy-{{user `aws_region`}}.s3.{{user `aws_region`}}.amazonaws.com/latest/install",
                "ls -alrt",
                "chmod +x ./install",
                "sudo ./install auto > /tmp/logfile",
                "ls -alrt",
                "sudo service codedeploy-agent status",
                "sudo service codedeploy-agent start",
                "sudo service codedeploy-agent status"

            ]
        }
    ]
}